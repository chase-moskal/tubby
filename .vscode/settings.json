{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,

	"files.eol": "\n",
	"files.encoding": "utf8",
	"files.insertFinalNewline": true,

	"files.exclude": {
		"dist": false,
		"coverage": true,
		"node_modules": true,
		"*.log*": true
	},

	"search.exclude": {
		"package-lock.json": true
	},

	"typescript.tsdk": "node_modules/typescript/lib/",

	"[markdown]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	}
}
